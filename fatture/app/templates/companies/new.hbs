<header class="row">
  <div class="col s12"><h2>New Company</h2></div>
</header>


<div class="row">
  <div class="col s12">
    <form {{action "saveCompany" on="submit"}}>
      <div class="row">
        <div class="input-field col s5">
          {{md-input value=model.name label="Company's Name"}}
        </div>
        <div class="input-field col s5">
          {{md-input value=model.owner label="Owner's Name"}}
        </div>
        <div class="input-field col s2">
          {{md-input value=model.identifier label="Custom ID"}}
        </div>
      </div>
      <div class="row">
        <div class="input-field col s7">
          {{md-input value=model.address label="Company Address"}}
        </div>
        <div class="input-field col s1">
          {{md-input value=model.postalCode label="Postal Code"}}
        </div>
        <div class="input-field col s2">
          {{md-input value=model.city label="City"}}
        </div>
        <div class="input-field col s2">
          {{md-input value=model.region label="Region"}}
        </div>
      </div>
      <div class="row">
        <div class="input-field col s12">
          {{md-input value=model.ssn label="SSN (Social Security Number)"}}
        </div>
      </div>
      <div class="row">
        <div class="input-field col s12">
          {{md-input value=model.vat label="VAT Number"}}
        </div>
      </div>
      <div class="row">
        <div class="input-field col s12">
          {{md-btn-submit text='Save' class="right"}}
        </div>
      </div>
    </form>
  </div>
</div>